<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="12dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimens_40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="240dp"
                        android:background="@color/greyPlaceholder" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimens_24dp"
                            android:layout_marginStart="@dimen/dimens_16dp"
                            android:layout_marginEnd="@dimen/dimens_16dp"
                            android:background="@color/greyPlaceholder" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimens_16dp"
                            android:layout_marginStart="@dimen/dimens_16dp"
                            android:layout_marginTop="@dimen/dimens_4dp"
                            android:layout_marginEnd="@dimen/dimens_16dp"
                            android:background="@color/greyPlaceholder" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="@dimen/dimens_56dp"
                android:layout_height="@dimen/dimens_56dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/dimens_24dp"
                android:background="@drawable/bg_button_round_white_without_stroke"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimens_24dp">

                <View
                    android:layout_width="@dimen/dimens_16dp"
                    android:layout_height="@dimen/dimens_16dp"
                    android:background="@color/greyUltraLight" />

            </LinearLayout>

        </FrameLayout>

        <View
            android:layout_width="@dimen/dimens_40dp"
            android:layout_height="@dimen/dimens_16dp"
            android:layout_marginStart="@dimen/dimens_12dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:background="@drawable/bg_round_placeholder"
            android:layout_marginLeft="@dimen/dimens_12dp" />

        <View
            android:layout_width="@dimen/dimens_48dp"
            android:layout_height="@dimen/dimens_48dp"
            android:layout_marginStart="@dimen/dimens_8dp"
            android:layout_marginTop="@dimen/dimens_2dp"
            android:background="@color/greyPlaceholder"
            android:layout_marginLeft="@dimen/dimens_8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_16dp"
            android:layout_marginStart="@dimen/dimens_24dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_marginEnd="@dimen/dimens_24dp"
            android:background="@color/greyPlaceholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_24dp"
                android:layout_marginEnd="@dimen/dimens_24dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:background="@color/greyPlaceholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:background="@color/greyPlaceholder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_8dp"
                android:layout_marginEnd="@dimen/dimens_8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:background="@color/greyPlaceholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:background="@color/greyPlaceholder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_24dp"
                android:layout_marginEnd="@dimen/dimens_24dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:background="@color/greyPlaceholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:background="@color/greyPlaceholder" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_24dp"
            android:layout_marginTop="@dimen/dimens_24dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_24dp">

            <View
                android:layout_width="@dimen/dimens_40dp"
                android:layout_height="@dimen/dimens_40dp"
                android:background="@color/greyPlaceholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_16dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimens_16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:background="@color/greyPlaceholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:background="@color/greyPlaceholder" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dimens_40dp"
                android:layout_height="@dimen/dimens_16dp"
                android:layout_marginStart="@dimen/dimens_16dp"
                android:layout_marginEnd="@dimen/dimens_24dp"
                android:background="@color/greyPlaceholder"
                android:layout_marginLeft="@dimen/dimens_16dp"
                android:layout_marginRight="@dimen/dimens_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_24dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_marginEnd="@dimen/dimens_24dp"
            android:layout_marginBottom="@dimen/dimens_16dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dimens_16dp"
                    android:layout_height="@dimen/size_12sp"
                    android:background="@color/greyPlaceholder" />

                <View
                    android:layout_width="@dimen/dimens_56dp"
                    android:layout_height="@dimen/size_12sp"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:background="@color/greyPlaceholder" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimens_16dp"
                android:layout_marginEnd="@dimen/dimens_16dp"
                android:background="@color/greyPlaceholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dimens_16dp"
                    android:layout_height="@dimen/size_12sp"
                    android:background="@color/greyPlaceholder" />

                <View
                    android:layout_width="@dimen/dimens_56dp"
                    android:layout_height="@dimen/size_12sp"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:background="@color/greyPlaceholder" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimens_16dp"
                android:layout_marginEnd="@dimen/dimens_16dp"
                android:background="@color/greyPlaceholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dimens_16dp"
                    android:layout_height="@dimen/size_12sp"
                    android:background="@color/greyPlaceholder" />

                <View
                    android:layout_width="@dimen/dimens_56dp"
                    android:layout_height="@dimen/size_12sp"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:background="@color/greyPlaceholder" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimens_16dp"
                android:layout_marginEnd="@dimen/dimens_16dp"
                android:background="@color/greyPlaceholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dimens_16dp"
                    android:layout_height="@dimen/size_12sp"
                    android:background="@color/greyPlaceholder" />

                <View
                    android:layout_width="@dimen/dimens_56dp"
                    android:layout_height="@dimen/size_12sp"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:background="@color/greyPlaceholder" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_24dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:layout_marginEnd="@dimen/dimens_24dp"
            android:layout_marginBottom="@dimen/dimens_16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_marginEnd="@dimen/dimens_8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bottomsheet_round_ultra_grey"
                android:layout_marginRight="@dimen/dimens_8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_marginStart="@dimen/dimens_8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bottomsheet_round_ultra_grey"
                android:layout_marginLeft="@dimen/dimens_8dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_48dp"
            android:background="@color/greyUltraLight"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimens_24dp"
                android:layout_marginTop="@dimen/dimens_8dp"
                android:layout_marginEnd="@dimen/dimens_24dp"
                android:layout_marginBottom="@dimen/dimens_8dp"
                android:background="@drawable/bg_button_half_round_color_white"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/dimens_16dp"
                    android:layout_height="@dimen/dimens_16dp"
                    android:layout_marginStart="@dimen/dimens_8dp"
                    android:layout_marginEnd="@dimen/dimens_8dp"
                    android:background="@color/greyUltraLight" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_16dp"
                    android:layout_marginEnd="@dimen/dimens_8dp"
                    android:layout_weight="1"
                    android:background="@color/greyUltraLight"
                    android:layout_marginRight="@dimen/dimens_8dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="@dimen/dimens_56dp"
            android:layout_height="@dimen/dimens_56dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/dimens_24dp"
                android:layout_height="@dimen/dimens_24dp"
                android:background="@color/greyUltraLight" />

            <View
                android:layout_width="@dimen/dimens_40dp"
                android:layout_height="@dimen/dimens_4dp"
                android:layout_marginTop="@dimen/dimens_8dp"
                android:background="@color/greyUltraLight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimens_56dp"
            android:layout_height="@dimen/dimens_56dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/dimens_24dp"
                android:layout_height="@dimen/dimens_24dp"
                android:background="@color/greyUltraLight" />

            <View
                android:layout_width="@dimen/dimens_40dp"
                android:layout_height="@dimen/dimens_4dp"
                android:layout_marginTop="@dimen/dimens_8dp"
                android:background="@color/greyUltraLight" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_56dp"
            android:layout_weight="1"
            android:background="@color/greyUltraLight">

            <View
                android:layout_width="@dimen/dimens_80dp"
                android:layout_height="@dimen/dimens_12dp"
                android:layout_gravity="center"
                android:background="@android:color/white" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_56dp"
            android:layout_weight="1"
            android:background="@color/greyUltraLight">

            <View
                android:layout_width="@dimen/dimens_80dp"
                android:layout_height="@dimen/dimens_12dp"
                android:layout_gravity="center"
                android:background="@android:color/white" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>